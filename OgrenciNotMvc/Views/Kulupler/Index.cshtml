@using OgrenciNotMvc.Models.EntityFramework
@model List<TBLKULUPLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>KULÜPLER</h2>

<table class="table table-bordered">
    <tr>
        <th>Kulüp ID</th>   
        <th>Kulüp Ad</th>
        <th>İşlemler</th>
    </tr>
    <tbody>
        @foreach (var klp in Model)
        {
            <tr>
                <td>@klp.KULUPID</td>
                <td>@klp.KULUPAD</td>
                <td>
                    <a href="/Kulupler/Sil/@klp.KULUPID" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                    <a href="/Kulupler/KulupGetir/@klp.KULUPID" class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                </td>
            </tr>

        }
    </tbody>
</table>
<a href="/Kulupler/YeniKulup" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i>Yeni Kulüp Kaydı</a>


